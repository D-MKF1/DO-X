<?xml version="1.0" encoding="UTF-8"?>
<!-- Control positions, based on trim settings instrument, useful for keyboard flying (2" version) -->

<PropertyList>

  <path>msctrl.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>rebord</object-name>
    <object-name>visses</object-name>
    <object-name>Controls.Face</object-name>
    <object-name>Controls.NeedleEl</object-name>
    <object-name>Controls.NeedleRud</object-name>
    <object-name>Controls.NeedleAil</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Controls.Face</object-name>
    <object-name>Controls.NeedleEl</object-name>
    <object-name>Controls.NeedleRud</object-name>
    <object-name>Controls.NeedleAil</object-name>
    <emission>
      <red> 1 </red>
      <green> 1 </green>
      <blue> 1 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Controls.NeedleEl</object-name>
    <property>/controls/flight/elevator</property>
    <factor> 0.0085 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Controls.NeedleRud</object-name>
    <property>/controls/flight/rudder</property>
    <factor> 0.0085 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Controls.NeedleAil</object-name>
    <property>/controls/flight/aileron</property>
    <interpolation>
      <entry><ind> -1 </ind><dep> -30 </dep></entry>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind>  1 </ind><dep>  30 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Labels activated by hotspots -->
  <animation>
    <type>material</type>
    <object-name>LabelMsCtrl</object-name>
    <emission>
      <red>   1.0 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LabelMsCtrl</object-name>
    <condition>
      <property>/sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>LabelMsCtrl</name>
    <type type="string">literal</type>
    <text type="string">Mouse Control for Flightgear only</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.012</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.2</max-height>
    <max-width>0.1</max-width>
    <font-resolution>
      <width type="int">32</width>
      <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m> 0.010 </x-m> <!-- near to panel -->
      <y-m> 0.000 </y-m> <!-- right -->
      <z-m> 0.065 </z-m> <!-- up -->
    </offsets>
  </text>

</PropertyList>

