<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>pedal.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>pedal</object-name>
    <object-name>lever</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- Interior lighting -->
  <animation>
    <type>material</type>
      <condition>
        <equals>
          <property>controls/lighting/panel</property>
          <value>1</value>
        </equals>
      </condition>
    <emission>
      <red>   0.27 </red>
      <green> 0.17 </green>
      <blue>  0.12 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pedal</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 23 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> -0.018 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
