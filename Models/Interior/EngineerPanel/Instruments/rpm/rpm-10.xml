<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>rpm-big.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>rebord</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <red> 1 </red>
      <green> 1 </green>
      <blue> 1 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <!-- Moteurs intérieur gauche arrière -->
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/engines/engine[10]/rpm</property>
    <min>0</min>
    <max>3600</max>
    <interpolation>
      <entry><ind>  600 </ind><dep>  14.3 </dep></entry>
      <entry><ind> 3500 </ind><dep> 340.0 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

