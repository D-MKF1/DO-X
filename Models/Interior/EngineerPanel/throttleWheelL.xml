<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>throttleWheel.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>throttleWheel</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- Interior lighting -->
  <animation>
    <type>material</type>
      <condition>
        <equals>
          <property>controls/lighting/engineerpanel</property>
          <value>1</value>
        </equals>
      </condition>
    <emission>
      <red>   0.15 </red>
      <green> 0.15 </green>
      <blue>  0.15 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>throttleWheel</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor> 99 </factor>
    <center>
      <x-m> 0.000 </x-m> <!-- near to panel -->
      <y-m> 1.000 </y-m> <!-- right -->
      <z-m> 0.000 </z-m> <!-- up -->
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
