<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>alt.ac</path>

  <animation>
    <object-name>visses</object-name>
    <object-name>rebord</object-name>
    <object-name>knob</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>kilodisk</object-name>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>kilodisk</object-name>
    <emission>
      <red> 1 </red>
      <green> 1 </green>
      <blue> 1 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor> 0.11 </factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>kilodisk</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>0.011</factor>
    <center>
      <x-m>  0.00 </x-m>
      <y-m>  0.00 </y-m>
      <z-m> -0.01 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>knob</object-name>
    <visible>true</visible>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/altimeter/setting-inhg</property>
        <step>0.009</step>
        <min>0</min>
        <max>60</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>
 
  <animation>
    <type>pick</type>
    <object-name>knob</object-name>
    <visible>true</visible>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/altimeter/setting-inhg</property>
        <step>-0.009</step>
        <min>0</min>
        <max>60</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>

<!-- Labels activated by hotspots -->
  <animation>
    <type>material</type>
    <object-name>LabelAlt</object-name>
    <emission>
        <red>1.0</red>
        <green>0.8</green>
        <blue>0.0</blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LabelAlt</object-name>
    <condition>
        <property>/sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>LabelAlt</name>
    <type type="string">literal</type>
    <text type="string">Altimeter (km)</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.012</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.2</max-height>
    <max-width>0.1</max-width>
    <font-resolution>
        <width type="int">32</width>
        <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.01 </x-m> <!-- near to panel -->
      <y-m>  0 </y-m> <!-- right -->
      <z-m>  0.075 </z-m> <!-- up -->
    </offsets>
  </text>
 
</PropertyList>



