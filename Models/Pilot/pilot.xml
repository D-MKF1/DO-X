<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>ww1_pilot_old.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>tete</object-name>
    <object-name>corps</object-name>
    <object-name>brasG</object-name>
    <object-name>brasD</object-name>
    <object-name>avantbrasG</object-name>
    <object-name>avantbrasD</object-name>
    <object-name>cuisseG</object-name>
    <object-name>cuisseD</object-name>
    <object-name>jambeG</object-name>
    <object-name>jambed</object-name>
    <object-name>piedG</object-name>
    <object-name>piedD</object-name>
    <object-name>lunettes</object-name>

    <!-- Objets transparents -->
    <object-name>lunettesTr</object-name>
  </animation>

  <!-- Interior lighting -->
  <animation>
    <type>material</type>
      <condition>
        <equals>
          <property>controls/lighting/panel</property>
          <value>1</value>
        </equals>
      </condition>
    <emission>
      <red>   0.27 </red>
      <green> 0.17 </green>
      <blue>  0.12 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>lunettesTr</object-name>
  </animation>

  <animation>
    <name>AnimeTete</name>
    <object-name>lunettes</object-name>
    <object-name>lunettesTr</object-name>
    <object-name>tete</object-name>
  </animation>

  <animation>
    <name>AnimeLunettes</name>
    <object-name>lunettes</object-name>
    <object-name>lunettesTr</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AnimeLunettes</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 45 </factor>
    <center>
      <x-m> 0.336 </x-m>
      <y-m> 0.005 </y-m>
      <z-m> 0.566 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AnimeTete</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> -2 </factor> 
    <center>
      <x-m> 0.366 </x-m>
      <y-m> 0.005 </y-m>
      <z-m> 0.411 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AnimeTete</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>-25</factor>
    <center>
      <x-m> 0.366 </x-m>
      <y-m> 0.005 </y-m>
      <z-m> 0.411 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AnimeTete</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> -10.0</factor>
    <center>
      <x-m> 0.366 </x-m>
      <y-m> 0.005 </y-m>
      <z-m> 0.411 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
 
   <!-- Tirer sur le manche-->
  <!-- coude-->
  <animation>
    <type>rotate</type>
    <object-name>avantbrasG</object-name>
    <object-name>avantbrasD</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <interpolation>
      <entry><ind> -1 </ind><dep>  20 </dep></entry>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind>  1 </ind><dep> -20 </dep></entry>
    </interpolation> 
    <axis>
      <x1-m>  0.200 </x1-m>
      <y1-m> -0.200 </y1-m>
      <z1-m>  0.114 </z1-m>
      <x2-m>  0.185 </x2-m>
      <y2-m>  0.208 </y2-m>
      <z2-m>  0.150 </z2-m>
    </axis>
  </animation>

  <!--epaule-->
  <animation>
    <type>rotate</type>
    <object-name>avantbrasG</object-name>
    <object-name>avantbrasD</object-name>
    <object-name>brasG</object-name>
    <object-name>brasD</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <interpolation>
	    <entry><ind> -1 </ind><dep> -18 </dep></entry>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind>  1 </ind><dep>  17 </dep></entry>
    </interpolation>
	  <center>
      <x-m>  0.417 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.325 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!--Bassin-->
  <animation>
    <type>rotate</type>
	  <object-name>avantbrasG</object-name>
    <object-name>avantbrasD</object-name>
    <object-name>brasG</object-name>
    <object-name>brasD</object-name>
    <object-name>corps</object-name>
    <object-name>AnimeTete</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 5 </factor>
    <center>
      <x-m>  0.365 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.042 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
    
  <!-- Tourner le volant-->
  <!--epaule gauche-->
  <animation>
    <type>rotate</type>
    <object-name>avantbrasG</object-name>
    <object-name>brasG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -1 </ind><dep> 8 </dep></entry>
      <entry><ind>  0 </ind><dep> 0 </dep></entry>
      <entry><ind>  1 </ind><dep> 3 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.425 </x-m>
      <y-m>  0.190  </y-m>
      <z-m>  0.344 </z-m>
    </center>
    <axis>
      <x>  0.8 </x>
      <y> -1.2 </y>
      <z>  0.0 </z>
    </axis>
  </animation>

  <!--epaule droite-->
  <animation>
    <type>rotate</type>
    <object-name>avantbrasD</object-name>
    <object-name>brasD</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -1 </ind><dep>  -2 </dep></entry>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind>  1 </ind><dep> -10 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.400 </x-m>
      <y-m> -0.165 </y-m>
      <z-m>  0.315 </z-m>
    </center>	
    <axis>
      <x> 0.8 </x>
      <y> 1.2 </y>
      <z> 0.0 </z>
    </axis>
  </animation>
  
 <!-- Pedales--> 
