<?xml version="1.0" encoding="UTF-8"?>

<PropertyList> 

  <path>afn2.ac</path>
    
  <animation>
    <object-name>visses</object-name>
    <object-name>rebord</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>marker</object-name>
    <object-name>markeron</object-name>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>marker</object-name>
    <object-name>markeron</object-name>
    <emission>
      <red> 1 </red>
      <green> 1 </green>
      <blue> 1 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>marker</object-name>
    <emission>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>markeron</object-name>
    <emission>
      <red>   2 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>marker</object-name>
    <condition>
      <equals>
        <property>/instrumentation/nav/dme-in-range</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>markeron</object-name>
    <condition>
      <and>
        <equals>
          <property>/instrumentation/nav/dme-in-range</property>
          <value>1</value>
        </equals>
        <equals>
          <property>/instrumentation/afn2/markeron</property>
          <value>1</value>
        </equals>
      </and>
    </condition>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>/instrumentation/afn2/distance</property>
    <factor>1</factor>
    <min-deg>-14</min-deg>
    <max-deg> 29</max-deg>
    <interpolation>
      <entry><ind> 10000</ind><dep> 29 </dep></entry>
      <entry><ind>  8000</ind><dep> 29 </dep></entry>
      <entry><ind>  7999</ind><dep>-14 </dep></entry>
      <entry><ind>   500</ind><dep> 0 </dep></entry>
      <entry><ind>  -500</ind><dep> 0 </dep></entry>
      <entry><ind> -7999</ind><dep>-14 </dep></entry>
      <entry><ind> -8000</ind><dep> 29 </dep></entry>
      <entry><ind>-10000</ind><dep> 29 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.0</x-m>
      <y-m> 0.026 </y-m>
      <z-m> 0.0</z-m>
    </center>
    <axis> 
      <x> 1.0 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
      <type>rotate</type>
      <object-name>needle2</object-name>
      <property>/instrumentation/afn2/heading-correction</property>
      <factor>1</factor>
      <min-deg>-23</min-deg>
      <max-deg>23</max-deg>
      <axis>
          <x>1.0</x>
          <y>0</y>
          <z>0.0</z>
      </axis>
      <center>
          <x-m>0.0</x-m>
          <y-m>0.0</y-m>
          <z-m> 0.026 </z-m>
      </center>
  </animation>

<!-- Labels activated by hotspots -->

  <animation>
    <type>material</type>
    <object-name>LabelAFN</object-name>
    <emission>
        <red>1.0</red>
        <green>0.8</green>
        <blue>0.0</blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LabelAFN</object-name>
    <condition>
        <property>/sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>LabelAFN</name>
    <type type="string">literal</type>
    <text type="string">AFN2 Indicator use NAV frequency for VOR-DME (not original in DO-X)</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.012</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.2</max-height>
    <max-width>0.13</max-width>
    <font-resolution>
        <width type="int">32</width>
        <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.01 </x-m> <!-- near to panel -->
      <y-m>  0 </y-m> <!-- right -->
      <z-m>  0.045 </z-m> <!-- up -->
    </offsets>
  </text>

</PropertyList>

