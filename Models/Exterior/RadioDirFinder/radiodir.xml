<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>radiodir.ac</path>

  <animation>
    <object-name>radioDirection</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>radioDirection</object-name>
    <property>/instrumentation/rdf/rotation-deg</property>
    <interpolation>
      <entry><ind>0</ind><dep> 0</dep></entry>
      <entry><ind>1</ind><dep>360</dep></entry>
    </interpolation>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>

  <!-- Interior lighting -->
  <animation>
    <type>material</type>
      <condition>
        <equals>
          <property>/controls/lighting/panel</property>
          <value>1</value>
        </equals>
      </condition>
    <emission>
      <red>   0.15 </red>
      <green> 0.15 </green>
      <blue>  0.15 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

</PropertyList>

